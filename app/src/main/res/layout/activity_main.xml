<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:orientation="vertical"
    android:padding="10dp"
    android:background="#E3E3E3">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:backgroundTint="#FFFFFF"
        android:layout_margin="20dp"
        app:cardElevation="10dp"
        app:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="20dp">


            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Simple Calculator"
                android:textSize="26sp"
                android:textAlignment="center"
                android:layout_marginBottom="40dp"
                android:textColor="@color/black"
                />

            <EditText
                android:inputType="number"
                android:id="@+id/first_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="First Number"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:textColorHint="#272727"
                />

            <EditText
                android:inputType="number"
                android:id="@+id/second_num"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Second Number"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:textColorHint="#272727"/>

            <GridLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:rowCount="4"
                android:paddingTop="30dp"
                android:paddingBottom="30dp"
                android:orientation="vertical"
                android:useDefaultMargins="true">

                <Button
                    android:id="@+id/addition_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:text="Addition"/>
                <Button
                    android:id="@+id/subtraction_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:text="Subtraction"/>

                <Button
                    android:id="@+id/multiplication_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:text="Multiplication"/>

                <Button
                    android:id="@+id/division_btn"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_rowWeight="1"
                    android:text="Division"/>

            </GridLayout>

            <EditText
                android:id="@+id/answer_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="Answer"
                android:textColor="@color/black"
                android:layout_marginBottom="20dp"
                android:textColorHint="#272727"/>


            <Button
                android:id="@+id/clear_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_rowWeight="1"
                android:layout_marginTop="20dp"
                android:backgroundTint="#424242"
                android:textColor="@color/white"
                android:text="All Clear"/>

        </LinearLayout>

    </androidx.cardview.widget.CardView>





</LinearLayout>